<h1>Listing data_source_collections</h1>

<table class="table datatable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Data sources</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @data_source_collections.each do |data_source_collection| %>
      <tr>
        <td><%= link_to data_source_collection.name, data_source_collection %></td>
        <td>
          <ul class="list-unstyled">
            <% data_source_collection.data_sources.order(:name).each do |ds| %>
              <li> <%= ds.name %> </li>
            <% end %>
          </ul>
        </td>
        <td class="text-right"> <%= render partial: "shared/row_functions", locals: { obj: data_source_collection } %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th>Name</th>
      <th>Data sources</th>
      <th></th>
    </tr>
  </tfoot>
</table>

<br>

<%= link_to 'New Data source collection', new_data_source_collection_path, { class: "btn btn-default" } %>
