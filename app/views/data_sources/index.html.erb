<h1>Listing data_sources</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Birst filename</th>
      <th>Data source type</th>
      <th>Redshift sql</th>
      <th>S3 path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @data_sources.each do |data_source| %>
      <tr>
        <td><%= data_source.name %></td>
        <td><%= data_source.birst_filename %></td>
        <td><%= data_source.data_source_type %></td>
        <td><%= data_source.redshift_sql %></td>
        <td><%= data_source.s3_path %></td>
        <td><%= link_to 'Show', data_source %></td>
        <td><%= link_to 'Edit', edit_data_source_path(data_source) %></td>
        <td><%= link_to 'Destroy', data_source, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

