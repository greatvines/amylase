<h1>Listing clients</h1>

<table class="table datatable">
  <thead>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Salesforce username</th>
      <th>Redshift schema</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td><%= client.name %></td>
        <td><%= client.salesforce_username %></td>
        <td><%= client.redshift_schema %></td>
        <td class="text-right"><%= link_to 'Show', client %> /
        <%= link_to 'Edit', edit_client_path(client) %> /
        <%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th>id</th>
      <th>Name</th>
      <th>Salesforce username</th>
      <th>Redshift schema</th>
      <th></th>
    </tr>
  </tfoot>
</table>

<br>

